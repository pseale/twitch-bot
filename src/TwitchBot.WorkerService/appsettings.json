{
  // Uncomment and fill in the values for the following settings if you don't want to use environment variables.
  // "TWITCH_BOT_USERNAME": "",
  // "TWITCH_CHANNEL": "",
  // "TWITCH_USER_ACCESS_TOKEN": "",

  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "LogLevel": {
        "Default": "Debug"
      },
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": true,
        "TimestampFormat": "yyyy-MM-ddTHH:mm:ss.ffffZ ",
        "UseUtcTimestamp": true
      }
    }
  }
}